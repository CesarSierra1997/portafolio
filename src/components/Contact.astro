---
import { useState } from 'react';
---

  <div class="container mx-auto px-2">
    <div class="flex flex-col gap-2 md:flex-row justify-between items-center">
      
      <!-- Contact Information -->
      <div class="bg-gray-800 p-8 rounded-lg shadow-md w-full md:w-1/2 mb-8 md:mb-0">
        <p class="text-lg mb-4">Contactarme por este medio</p>
        <ul class="space-y-4">
          <li class="flex items-center space-x-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M12 22s8-4.5 8-10V5l-8-4-8 4v7c0 5.5 8 10 8 10z"></path>
            </svg>
            <span>Bogot√° - Colombia co</span>
          </li>
          <li class="flex items-center space-x-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12s4.477 10 10 10 10-4.477 10-10z"></path>
              <path d="M12 8v4l3 3"></path>
            </svg>
            <span>+57 3213162622</span>
          </li>
          <li class="flex items-center space-x-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M22 2l-10 10L2 2"></path>
            </svg>
            <span>cesarmallungo@gmail.com</span>
          </li>
        </ul>
      </div>

      <!-- Contact Form -->
      <div class="bg-gray-800 p-8 rounded-lg shadow-md w-full md:w-1/2">
        <form action="#" method="POST" class="space-y-4">
          <div>
            <input type="text" id="name" name="name" placeholder="Full Name" class="w-full p-3 bg-gray-900 text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" />
          </div>
          <div>
            <input type="email" id="email" name="email" placeholder="Email" class="w-full p-3 bg-gray-900 text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" />
          </div>
          <div>
            <textarea id="message" name="message" rows="4" placeholder="Message ..." class="w-full p-3 bg-gray-900 text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"></textarea>
          </div>
          <button type="submit" class="bg-blue-600 text-white py-3 px-6 rounded-lg hover:bg-blue-500 transition-all">
            Send
          </button>
        </form>
      </div>
    </div>
  </div>
